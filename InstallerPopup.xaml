<Window x:Class="LiveryManagerApp.InstallerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Install New Livery &amp; Configs" 
        Height="700" Width="700"
        Background="#0F1225"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        AllowDrop="True" Drop="Window_Drop">

    <Window.Resources>
        <SolidColorBrush x:Key="BgColor" Color="#0F1225"/>
        <SolidColorBrush x:Key="CardColor" Color="#1A1E3F"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#252A40"/>
        <SolidColorBrush x:Key="AccentColor" Color="#00A8FF"/>
        <SolidColorBrush x:Key="GoldColor" Color="#FFD700"/>
        <SolidColorBrush x:Key="DangerColor" Color="#FF3B30"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AEC6CF"/>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="checkBoxBorder" Width="20" Height="20" CornerRadius="5" 
                                    Background="{StaticResource SurfaceColor}" BorderBrush="#3A3F55" BorderThickness="1"
                                    VerticalAlignment="Center">
                                <Path x:Name="checkMark" Data="M4,10 L8,14 L16,5" Stroke="White" StrokeThickness="2.5" 
                                      StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round"
                                      Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="#00A8FF"/>
                                <Setter TargetName="checkBoxBorder" Property="BorderThickness" Value="0"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20,10,20,15">
            <TextBlock x:Name="LblTargetAircraft" Text="Target Aircraft: Loading..." FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>
            <TextBlock Text="Note: Liveries will be auto-installed to the correct aircraft variant.&#x0a;Config files (.ini) will be sent to the aircraft selected in the Manager." 
                       FontSize="11" Foreground="Gray" Margin="0,5,0,0" TextWrapping="Wrap"/>
        </StackPanel>

        <Border Grid.Row="1" Background="{StaticResource CardColor}" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="1. Select Files (Zip, Folder or .ini):" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" FontSize="13" Margin="0,0,0,10"/>
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtFiles" Grid.Column="0" Height="38" IsReadOnly="True" Text="Drag files here (Liveries or Configs)..." Foreground="White" Margin="0,0,15,0"/>
                    <Button x:Name="BtnBrowse" Grid.Column="1" Content="Browse" Height="38" Background="{StaticResource AccentColor}" Click="BtnBrowse_Click"/>
                </Grid>

                <TextBlock Text="2. Installation Location (Liveries):" Foreground="{StaticResource TextPrimary}" FontWeight="Bold" FontSize="13" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtInstallPath" Grid.Column="0" Height="38" Margin="0,0,15,0"/>
                    <Button x:Name="BtnChangePath" Grid.Column="1" Content="Change" Height="38" Background="{StaticResource AccentColor}" Click="BtnChangePath_Click"/>
                </Grid>

                <Button x:Name="BtnDefaultCommunity" 
                        Content="↺ Reset to default Community Path" 
                        Click="BtnDefaultCommunity_Click" 
                        Margin="0,5,0,25" 
                        Height="22" 
                        Width="220"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        FontWeight="Normal"
                        Background="Transparent" 
                        Foreground="{StaticResource TextSecondary}" 
                        BorderThickness="0" 
                        Cursor="Hand" />

                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                    <CheckBox x:Name="ChkAddonLinker" Content="Addon Linker Mode (Separate Folders)" Checked="ChkAddonLinker_Changed" Unchecked="ChkAddonLinker_Changed"/>
                    <CheckBox x:Name="ChkCustomName" 
                      Content="Custom name for the folder of each livery" 
                      Foreground="Gray" 
                      Margin="30,0,0,0" 
                      Visibility="Collapsed"
                      Checked="ChkCustomName_Changed" 
                      Unchecked="ChkCustomName_Changed"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="⚠" FontSize="20" Foreground="{StaticResource GoldColor}" Margin="0,0,10,0"/>
                    <TextBlock Text="Supports Mixed Bulk Install: Zip, Folders &amp; Configs (.ini).&#x0a;Configs are installed 'AS IS' to WASM/Work folder." 
                               Foreground="{StaticResource GoldColor}" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Margin="20,20,20,10">
            <TextBlock x:Name="LblStatus" Text="Ready to install." Foreground="Gray" FontSize="13" Margin="5,0,0,10"/>

            <ProgressBar x:Name="ProgressBarStatus" Height="12" Minimum="0" Maximum="100" Value="0" Margin="0,0,0,15" Foreground="{StaticResource AccentColor}" Background="{StaticResource BgColor}" BorderThickness="0"/>

            <Button x:Name="BtnInstall" Content="INSTALL ALL" Height="55" FontSize="18" Foreground="Black" Background="{StaticResource GoldColor}" Margin="0,0,0,20" Click="BtnInstall_Click"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BtnClearAll" Grid.Column="0" Content="Clear All" Width="100" Height="32" Background="{StaticResource DangerColor}" Click="BtnClearAll_Click"/>

                <Button x:Name="BtnFixPaths" Grid.Column="2" Content="Fix Long Paths (RegEdit) 🛠️" Width="200" Height="32" Background="Transparent" Foreground="{StaticResource GoldColor}" BorderBrush="{StaticResource GoldColor}" BorderThickness="1" Click="BtnFixPaths_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>