<Window x:Class="LiveryManagerApp.FolderNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Naming" Height="280" Width="500"
        Background="#0F1225" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Set Custom Folder Name" Foreground="#00A8FF" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock x:Name="LblOrigin" Text="Installing: ..." Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBox x:Name="TxtEntry" Height="35" Width="400" Margin="0,0,0,20" 
                     VerticalContentAlignment="Center" Padding="10,0" FontSize="14"
                     Background="#0F1225" Foreground="White" BorderBrush="#00A8FF" BorderThickness="1"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <Button Content="Use Default Name" Width="150" Height="35" Margin="0,0,15,0"
                        Background="#252A40" Foreground="White" Click="BtnDefault_Click"/>
                <Button Content="Confirm Custom Name" Width="170" Height="35"
                        Background="#FFD700" Foreground="Black" FontWeight="Bold" Click="BtnConfirm_Click"/>
            </StackPanel>

            <Button Content="Clear Input" Width="100" Height="25" Background="#FF3B30" 
                    Foreground="White" FontSize="10" Click="BtnClear_Click"/>
        </StackPanel>
    </Grid>
</Window>