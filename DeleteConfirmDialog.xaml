<Window x:Class="LiveryManagerApp.DeleteConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Deletion" Height="320" Width="420"
        Background="#0F1225" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Are you sure you want to delete this livery?" 
                       Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Border CornerRadius="8" ClipToBounds="True" Width="260" Height="100" Margin="0,0,0,15" Background="#1A1E3F">
                <Image x:Name="ImgThumbnail" Stretch="UniformToFill" />
            </Border>

            <TextBlock x:Name="TxtLiveryName" Text="Livery Name" 
                       Foreground="#00A8FF" FontSize="14" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,25"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Cancel" Width="100" Height="35" Margin="0,0,15,0" Background="#252A40" Click="BtnCancel_Click"/>
                <Button Content="Yes, Delete" Width="120" Height="35" Background="#E74C3C" Click="BtnConfirm_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>