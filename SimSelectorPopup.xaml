<Window x:Class="LiveryManagerApp.SimSelectorPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="380" Width="450"
        Background="#0F1225" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="Welcome to doguer's Livery Manager" Foreground="#00A8FF" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Please select your MSFS version or Custom Folder&#x0a;to auto-detect folders correctly." 
                       Foreground="Gray" FontSize="12" TextAlignment="Center" Margin="0,0,0,30"/>

            <Button Content="Microsoft Store / Xbox App" Height="45" Width="320" Margin="0,0,0,12"
                    Background="#1A1E3F" BorderBrush="#00A8FF" BorderThickness="2" Click="BtnStore_Click"/>

            <Button Content="Steam Version" Height="45" Width="320" Margin="0,0,0,12"
                    Background="#1A1E3F" BorderBrush="#FFD700" BorderThickness="2" Click="BtnSteam_Click"/>

            <Button Content="Custom Folder Location" Height="45" Width="320"
                    Background="#252A40" BorderBrush="Gray" BorderThickness="1" FontSize="13" FontWeight="Normal" Click="BtnCustom_Click"/>
        </StackPanel>
    </Grid>
</Window>