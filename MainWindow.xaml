<Window x:Class="LiveryManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PMDG/iFly Livery Manager - v2.0-r2" Height="850" Width="1300"
        Icon="ico.ico"
        Background="#0F1225" 
        WindowStartupLocation="CenterScreen"
        AllowDrop="True" Drop="Window_Drop">

    <Window.Resources>
        <SolidColorBrush x:Key="BgColor" Color="#0F1225"/>
        <SolidColorBrush x:Key="CardColor" Color="#1A1E3F"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#252A40"/>
        <SolidColorBrush x:Key="AccentColor" Color="#00A8FF"/>
        <SolidColorBrush x:Key="GoldColor" Color="#FFD700"/>
        <SolidColorBrush x:Key="DangerColor" Color="#FF3B30"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AEC6CF"/>
        <SolidColorBrush x:Key="SearchBgColor" Color="#0A0C1A"/>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="checkBoxBorder" Width="20" Height="20" CornerRadius="5" 
                                    Background="{StaticResource SurfaceColor}" BorderBrush="#3A3F55" BorderThickness="1"
                                    VerticalAlignment="Center">
                                <Path x:Name="checkMark" Data="M4,10 L8,14 L16,5" Stroke="White" StrokeThickness="2.5" 
                                      StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round"
                                      Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="#1F6AA5"/>
                                <Setter TargetName="checkBoxBorder" Property="BorderThickness" Value="0"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Name="Border" Padding="{TemplateBinding Padding}" Background="Transparent" CornerRadius="5" Margin="2">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3A3F55"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#00A8FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DangerColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B71C1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7F0000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8"/>

                            <ToggleButton x:Name="toggleButton" Focusable="false" 
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <Border CornerRadius="8" Background="Transparent" />
                                            <Path x:Name="arrow" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0" 
                                                  Data="M0,0 L4,4 L8,0" Stroke="{StaticResource TextSecondary}" StrokeThickness="2" Fill="Transparent"/>
                                        </Grid>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter x:Name="contentPresenter" IsHitTestVisible="False" Margin="10,0,30,0" 
                                              VerticalAlignment="Center" HorizontalAlignment="Left" 
                                              Content="{TemplateBinding SelectionBoxItem}"/>

                            <Popup x:Name="popup" AllowsTransparency="True" IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}" Placement="Bottom" PopupAnimation="Slide">
                                <Border x:Name="dropDownBorder" Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}" 
                                        Background="{StaticResource CardColor}" CornerRadius="8" Margin="0,5,0,0" Padding="2"
                                        BorderThickness="1" BorderBrush="#3A3F55">
                                    <ScrollViewer>
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                <TextBlock Text="Aircraft Model:" Foreground="{StaticResource TextSecondary}" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbAircraft" Width="220" SelectionChanged="CmbAircraft_SelectionChanged"/>
            </StackPanel>

            <StackPanel x:Name="PnlVariant" Grid.Column="1" Orientation="Vertical" Margin="0,0,20,0">
                <TextBlock Text="Aircraft Variant:" Foreground="{StaticResource TextSecondary}" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbVariant" Width="160" SelectionChanged="CmbVariant_SelectionChanged"/>
            </StackPanel>

            <StackPanel x:Name="PnlWinglets" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,20,7">
                <CheckBox x:Name="ChkSSW" Content="SSW" Foreground="White" IsChecked="True" Margin="0,0,10,0" VerticalContentAlignment="Center" Checked="ChkFilter_Changed" Unchecked="ChkFilter_Changed"/>
                <CheckBox x:Name="ChkBW" Content="BW" Foreground="White" IsChecked="True" VerticalContentAlignment="Center" Checked="ChkFilter_Changed" Unchecked="ChkFilter_Changed"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="10,0,0,0">
                <TextBlock Text="Sim Version:" Foreground="{StaticResource TextSecondary}" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbSimVersion" Width="140" SelectionChanged="CmbSimVersion_SelectionChanged">
                    <ComboBoxItem Content="MS_STORE" IsSelected="True"/>
                    <ComboBoxItem Content="STEAM"/>
                    <ComboBoxItem Content="CUSTOM"/>
                </ComboBox>
            </StackPanel>

            <Border Grid.Column="4" Background="{StaticResource SearchBgColor}" CornerRadius="17" Height="35" Width="250" HorizontalAlignment="Right" Margin="0,15,15,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="🔍" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="10,0,5,0"/>
                    <TextBox x:Name="TxtSearch" Grid.Column="1" Background="Transparent" Foreground="{StaticResource TextPrimary}" BorderThickness="0" VerticalAlignment="Center" TextChanged="TxtSearch_TextChanged"/>
                    <Button x:Name="BtnClearSearch" Grid.Column="2" Content="✕" Background="Transparent" Foreground="Gray" BorderThickness="0" Width="25" Click="BtnClearSearch_Click" Visibility="Collapsed"/>
                </Grid>
            </Border>

            <Button x:Name="BtnRefresh" Grid.Column="5" Content="🔄" Width="40" Height="35" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="18" Margin="0,15,10,0" Click="BtnRefresh_Click"/>
            <Button x:Name="BtnAddLivery" Grid.Column="6" Content="➕ Add Livery" Width="130" Height="35" Background="{StaticResource GoldColor}" Foreground="Black" FontWeight="Bold" BorderThickness="0" Margin="0,15,0,0" Click="BtnAddLivery_Click"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,10,0,0">
            <WrapPanel x:Name="LiveriesPanel" Orientation="Horizontal" HorizontalAlignment="Center"/>
        </ScrollViewer>

        <TextBlock x:Name="LblStats" Grid.Row="2" Text="Ready." Foreground="{StaticResource TextSecondary}" FontWeight="Bold" FontSize="14" Margin="10,10,0,10"/>

        <Grid Grid.Row="3" Background="{StaticResource BgColor}" Margin="0,10,0,0">
            <TextBlock Text="@doguer 2026 | v2.0-r2" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <Button x:Name="BtnDonate" Content="Donate Here" Background="#0079C1" Foreground="White" FontWeight="Bold" Width="120" Height="30" BorderThickness="0" HorizontalAlignment="Right" Margin="0,0,10,0" Click="BtnDonate_Click"/>
        </Grid>

    </Grid>
</Window>